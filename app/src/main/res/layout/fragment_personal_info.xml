<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.homeFragmentsUi.settingsChildFragmentsUi.driver.PersonalInfo">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of Driver"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/black"
            android:layout_gravity="start"/>
        <EditText
            android:id="@+id/addDriver_pfDriverName"
            android:editable="false"
            android:inputType="none"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40ssp"
            android:background="@drawable/outline_shape"
            android:fontFamily="@font/sf_ui_display"
            android:textStyle="bold"
            android:hint="Enter driver name"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLines="1"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:textColor="@color/bGo_inputBoxTextColor"
            android:textSize="@dimen/_12ssp" />
        <TextView
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mobile_number"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/black"
            android:layout_gravity="start"/>
        <EditText
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:gravity="center_vertical"
            android:id="@+id/addDriver_pfMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40ssp"
            android:background="@drawable/outline_shape"
            android:fontFamily="@font/sf_ui_display"
            android:textStyle="bold"
            android:hint="Enter the mobile name"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLines="1"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:textColor="@color/bGo_inputBoxTextColor"
            android:textSize="@dimen/_12ssp" />
        <TextView
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_address"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/black"
            android:layout_gravity="start"/>
        <EditText
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:gravity="center_vertical"
            android:id="@+id/addDriver_pfEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40ssp"
            android:background="@drawable/outline_shape"
            android:fontFamily="@font/sf_ui_display"
            android:textStyle="bold"
            android:hint="@string/enter_email"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLines="1"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:textColor="@color/bGo_inputBoxTextColor"
            android:textSize="@dimen/_12ssp" />
        <TextView
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sex"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/black"
            android:layout_gravity="start"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:hint="Select Gender"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            >

            <AutoCompleteTextView
                android:editable="false"
                android:inputType="none"
                android:id="@+id/filled_exposed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </AutoCompleteTextView>

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/sf_ui_display_medium"
            android:textColor="@color/black"
            android:layout_gravity="start"/>
        <EditText
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:gravity="center_vertical"
            android:id="@+id/addDriver_pfAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40ssp"
            android:background="@drawable/outline_shape"
            android:fontFamily="@font/sf_ui_display"
            android:textStyle="bold"
            android:hint="@string/enter_address"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLines="1"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:textColor="@color/bGo_inputBoxTextColor"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>




</ScrollView>