<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout3"
    tools:context=".view.driverProfileUi.driverProfileFragment.Selfie_Info">

     <LinearLayout
         android:orientation="vertical"
         android:layout_gravity="center_horizontal"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <RelativeLayout
             android:id="@+id/rootLayout"
             android:gravity="center_horizontal"
             android:layout_width="match_parent"
             android:layout_height="@dimen/_300sdp">

             <de.hdodenhof.circleimageview.CircleImageView
                 android:id="@+id/profile_image"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_250sdp"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:scaleType="centerCrop"
                 android:src="@drawable/person"
                 android:tint="@color/bGo_inputBg"
                 android:tintMode="screen"
                 app:civ_border_color="@color/bGo_textColorProfile"
                 app:civ_border_width="5dp" />

             <ImageView
                 android:id="@+id/image_icon"
                 android:layout_width="@dimen/_50ssp"
                 android:layout_height="@dimen/_50ssp"
                 android:layout_alignParentBottom="true"
                 android:layout_marginLeft="-140dp"
                 android:layout_marginBottom="63dp"
                 android:layout_toRightOf="@id/profile_image"
                 android:background="@drawable/shape_oval"
                 android:scaleType="centerInside"
                 android:src="@drawable/add_photo" />
         </RelativeLayout>
         <LinearLayout
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:gravity="center_horizontal"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:textColor="@color/bGo_textColorProfile"
                 android:fontFamily="@font/sf_ui_display"
                 android:textSize="@dimen/_14ssp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="@string/one"/>

             <TextView
                 android:gravity="center_horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:fontFamily="@font/sf_ui_display"
                 android:text="2.Try to take clear fresh image."
                 android:textColor="@color/bGo_textColorProfile"
                 android:textSize="@dimen/_14ssp" />
         </LinearLayout>



     </LinearLayout>
</FrameLayout>