<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.homeFragmentsUi.settingsChildFragmentsUi.bGoHelp.bgoHelp">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/toolBar_layout"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/backVehicle"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/arrow_back"/>

        <TextView
            android:id="@+id/driverToolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_toRightOf="@id/backVehicle"
            android:fontFamily="@font/sf_ui_display"
            android:text="@string/bgo_help"
            android:textColor="@color/bGo_textColorPrimary"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />


        <TextView
            android:layout_alignStart="@id/driverToolbar_title"
            android:layout_below="@id/driverToolbar_title"
            android:textColor="@color/bGo_textColorProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_ui_display"
            android:textSize="@dimen/_12ssp"
            android:text="@string/help"/>
    </RelativeLayout>
    <EditText
        android:drawableEnd="@drawable/search"
        android:id="@+id/addDriver_pfDriverName"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40ssp"
        android:background="@drawable/outline_shape"
        android:fontFamily="@font/sf_ui_display"
        android:textStyle="bold"
        android:hint="Search for keywords"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:maxLines="1"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:textColor="@color/bGo_inputBoxTextColor"
        android:textSize="@dimen/_12ssp" />
    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/bGoHelp_recycler"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/help_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>